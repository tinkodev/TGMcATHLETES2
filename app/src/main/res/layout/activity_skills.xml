<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_Screen.Skills"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/skills">
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:paddingTop="5dp"
                android:layout_marginBottom="10dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/skills_MU_id"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_button_transparent"
                android:text="muscle-up hunt"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/skills_FL_id"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_button_transparent"
                android:text="front-lever hunt"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/skills_BL_id"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_button_transparent"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="back-lever hunt"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/skills_JO_id"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_button_transparent"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="jump-over the bar"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/skills_JON_id"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_button_transparent"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="jump-on the bar"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/skills_PU_id"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_button_transparent"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Pull-over"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/skills_BCP_id"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_button_transparent"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="back-clap push-up"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/skills_TT_id"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_button_transparent"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="toe-touch push-up"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/skills_TS_id"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_button_transparent"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="360 on bar"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/skills_HS_id"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_button_transparent"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="hand-stand"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/skills_PH_id"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_button_transparent"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="planche hunt"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/skills_VS_id"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_button_transparent"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="v-sit hold"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/skills_SP_id"
                android:layout_marginBottom="5dp"
